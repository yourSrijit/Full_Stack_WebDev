<% if(success && success.length){  %>
<div class="alert alert-success col-6 offset-3 alert-dismissible fs-4" role="alert"> 
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% }  %>
  <% if(error && error.length){  %>
    <div class="alert alert-danger d-flex align-items-center col-6 offset-3 alert-dismissible fs-4" role="alert"> 
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% }  %>